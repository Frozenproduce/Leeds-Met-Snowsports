<table><tr>
  <td>
      <%= f.label :parent_id, 'Parent' %><br />
      <select name="page[parent_id]">
        <option value="">None (top level)</option>
        <optgroup label="Select a parent navigation item">
          <%= page_options @page.parent_id %>
        </optgroup>
      </select>
  </td>
	<td>
		<%= f.label :gallery_id, 'Associated Gallery' %><br />
		<select name="page[gallery_id]" id="page_gallery_id">
		  <option value="">None</option>
		  <%- @galleries.each do |item| %>
		  <option value="<%= item.id %>"<%= " selected='selected'" if item.id == @page.gallery_id %>><%= item.name %></option>
		  <% end %>
		</select><br />
	</td>
	<td>
		<%= f.label :gallery_id, 'Associated Profile' %><br />
		<select name="page[profile_id]" id="page_profile_id">
		  <option value="">None</option>
		  <%- @profiles.each do |item| %>
		  <option value="<%= item.profile_id %>"<%= " selected='selected'" if item.profile_id == @page.profile_id %>><%= item.title %></option>
		  <% end %>
		</select><br />
	</td>
  <td>
      <label>
        Published?<br />
        <%= f.check_box :published %>
      </label>
  </td>
  <td>
    <%= label :page, :publish_date %><br />
    <%= date_select :page, :publish_date, :order => [:day,:month,:year], :start_year => 2000 %>
  </td>
</tr></table>
