<% content_for :support do %>
<h2><%= @page.title %></h2>
<ul class="nav">
	<% @galleries.each do |gallery| %>
	<li><a href="/gallery?id=<%= gallery.id %>"><%= gallery.name %></a></li>
	<% end %>
</ul>
<%= render :partial => 'public/shared/news' %>
<%= render :partial => 'public/shared/events' %>
<% end %>

<%= render 'public/shared/page_body' %>

<ul class="gallery">
<% @galleries.each do |gallery| %>
	<li class="<%= cycle('one','two','three')%>">
		<a href="/gallery?id=<%= gallery.id %>">
			<%= image_tag gallery.gallery_images.first.file.url(:thumb) %>
		</a>
		<p><a href="/gallery?id=<%= gallery.id %>"><%= gallery.name %></a></p>
	</li>
<% end %>
</ul>
