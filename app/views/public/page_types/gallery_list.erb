<% content_for :support do %>
<h2><%= @page.title %></h2>
<ul class="nav">
	<% @galleries.each do |gallery| %>
	<li><%= link_to gallery.name, gallery_path(gallery) %></li>
	<% end %>
</ul>
<%= render :partial => 'public/shared/news' %>
<%= render :partial => 'public/shared/events' %>
<% end %>

<%= render 'public/shared/page_body' %>

<ul class="gallery">
<% @galleries.each do |gallery| %>
	<% if gallery.gallery_images.first %>
	<li class="<%= cycle('one','two','three')%>">
			<%= link_to image_tag(gallery.gallery_images.first.file.url(:thumb)), gallery_path(gallery) %>
		<p><%= link_to gallery.name, gallery_path(gallery) %></p>
	</li>
	<% end %>
<% end %>
</ul>
